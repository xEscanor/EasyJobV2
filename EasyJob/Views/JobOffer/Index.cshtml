@using EasyJob.Models
@model JobOfferSearchModel
@{
    ViewBag.Title = "Search";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
    if ((bool)Session["company"] == true)
    {
        Response.Redirect("~/Home/IndexC");
    }
}
<h2>Search</h2>

@using (Html.BeginForm("Recherche", "JobOffer", FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>JobOffer</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Experience, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Experience" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Profil, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Profil, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Profil" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Diploma, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Diploma, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Diploma" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Ville, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ville.Nom, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Ville" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Salary, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Salary" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FieldOfActivity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FieldOfActivity, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "FieldOfActivity" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NomC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomC, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "NomC" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MotCle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MotCle, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "8", @placeholder = "MotCle" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "9", @placeholder = "Type" } })
            </div>
        </div>
        <button class="btn btn-lg btn-primary" type="submit" value="Search" name="name">Search</button>
    </div>
}
@Scripts.Render("~/Scripts/jquery-3.3.1.js")
@Scripts.Render("~/Scripts/jquery.validate.js")

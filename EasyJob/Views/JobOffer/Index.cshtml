
@using EasyJob.Models
@model JobOfferSearchModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }
    </style>

</head>
<body>
    <div id="login-div">
        @using (Html.BeginForm("Recherche", "JobOffer", FormMethod.Post))
        {

        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Experience)
                </td>
                <td>
                    @Html.EditorFor(model => model.Experience)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.Profil)
                </td>
                <td>
                    @Html.EditorFor(model => model.Profil)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.Diploma)
                </td>
                <td>
                    @Html.EditorFor(model => model.Diploma)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.Ville)
                </td>
                <td>
                    @Html.EditorFor(model => model.Ville.Nom)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.Salary)
                </td>
                <td>
                    @Html.EditorFor(model => model.Salary)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.FieldOfActivity)
                </td>
                <td>
                    @Html.EditorFor(model => model.FieldOfActivity)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.NomC)
                </td>
                <td>
                    @Html.EditorFor(model => model.NomC)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.MotCle)
                </td>
                <td>
                    @Html.EditorFor(model => model.MotCle)
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.Type)
                </td>
                <td>
                    @Html.EditorFor(model => model.Type)
                </td>
            </tr>

        </table>

            <input type="submit" name="name" value="Rechercher" />
        }
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>

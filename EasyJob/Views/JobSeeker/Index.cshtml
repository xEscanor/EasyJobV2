
@using EasyJob.Models
@model JobSeekerSearchModel
@{
    ViewBag.Title = "Search";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
    if ((bool)Session["company"] == false)
    {
        Response.Redirect("~/Home/IndexJS");
    }
}

<h2>Search</h2>

@using (Html.BeginForm("Recherche", "JobSeeker", FormMethod.Post))
{
<div class="form-horizontal">
    <h4>JobOffer</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Experience, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Experience" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Ville, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ville.Nom, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Experience" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Diploma, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Diploma, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Experience" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Experience" } })
        </div>
    </div>
    <button class="btn btn-lg btn-primary" type="submit" value="Search" name="name">Search</button>

</div>

        }
        @Scripts.Render("~/Scripts/jquery-3.3.1.js")
        @Scripts.Render("~/Scripts/jquery.validate.js")
        @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.js")
